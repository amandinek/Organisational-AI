{{#partial "content"}}

    <body>
    <div class=" container-fluid">
        <div class="row">
            <div class="col-sm-4" id="center">
                <form action="/news/new" method="POST" name="test">
                    <div class="form-group">
                        <label for="newsTitle"> Title </label><br>
                        <input id="newsTitle" name="title" placeholder="News title" type="text" tabindex="1" required autofocus class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="Content">Content</label><br>
                        <input id="Content" name="body" placeholder="Content" type="text" tabindex="1" required autofocus class="form-control" row="10">
                    </div>
                    <div class="form-group">
                        <label for="dept_Id">Id </label><br>
                        <input id="dept_Id" name="dept_Id" placeholder="Id" type="text" tabindex="1" required autofocus class="form-control" >
                    </div>
                    <button type="submit" class="btn btn-success">Add news</button>
                    <br>
                </form>
            </div>
        </div>
    </div>
    </body>
{{/partial }}
