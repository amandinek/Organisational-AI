{{#partial "content"}}

    <body>
    <div class=" container-fluid">
        <div class="row">
            <div class="col-sm-4" id="center">
                <form action="/department/new" method="POST" name="test">
                    <div class="form-group">
                        <label for="nameOfDepartement"> Name of department </label><br>
                        <input id="nameOfDepartement" name="dept_name" placeholder="departement Name" type="text" tabindex="1" required autofocus class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="Description">Description</label><br>
                        <input id="Description" name="dept_description" placeholder="Description" type="text" tabindex="1" required autofocus class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="role">Number of employees </label><br>
                        <input id="Position" name="dept_size" placeholder="Number of employees" type="text" tabindex="1" required autofocus class="form-control">
                    </div>
                    <button type="submit" class="btn btn-success">Add department</button>
                    <br>
                </form>
            </div>
        </div>
    </div>
